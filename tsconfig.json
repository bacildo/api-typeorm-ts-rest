{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "es6", "es7"],
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "stripInternal": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true
  }
}
